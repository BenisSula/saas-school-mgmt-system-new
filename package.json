{
  "name": "saas-school-mgmt-system",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix backend\" \"npm run dev --prefix frontend\"",
    "lint": "npm run lint --prefix backend && npm run lint --prefix frontend",
    "test": "npm run test --prefix backend && npm run test --prefix frontend",
    "format": "npm run format --prefix backend && npm run format --prefix frontend",
    "format:write": "npm run format:write --prefix backend && npm run format:write --prefix frontend",
    "generate:api-types": "openapi-typescript backend/openapi.yaml -o frontend/src/lib/api-types.ts",
    "qa:test": "node scripts/qa-test-runner.js",
    "qa:setup": "powershell -ExecutionPolicy Bypass -File scripts/setup-qa-environment.ps1",
    "load:test:export": "node scripts/load-tests/export-load-test.js",
    "load:test:upload": "node scripts/load-tests/upload-load-test.js",
    "load:test:attendance": "node scripts/load-tests/attendance-load-test.js",
    "load:test:all": "npm run load:test:export && npm run load:test:upload && npm run load:test:attendance",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "concurrently": "^9.1.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "openapi-typescript": "^7.4.2"
  },
  "lint-staged": {
    "backend/src/**/*.ts": [
      "npm run lint --prefix backend -- --fix",
      "npm run format:write --prefix backend"
    ],
    "backend/tests/**/*.ts": [
      "npm run lint --prefix backend -- --fix",
      "npm run format:write --prefix backend"
    ],
    "frontend/src/**/*.{ts,tsx}": [
      "npm run lint --prefix frontend -- --fix",
      "npm run format:write --prefix frontend"
    ]
  }
}
