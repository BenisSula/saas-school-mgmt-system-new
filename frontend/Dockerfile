FROM node:20-alpine

WORKDIR /app

COPY package*.json tsconfig.json vite.config.ts tailwind.config.cjs postcss.config.cjs vitest.setup.ts ./
RUN npm install

COPY index.html ./index.html
COPY src ./src
COPY public ./public

EXPOSE 5173

CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]

